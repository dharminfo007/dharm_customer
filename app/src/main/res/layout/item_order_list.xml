<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/llContactUs"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_gravity="center"
    android:layout_marginVertical="10dp"
    android:orientation="horizontal">

    <TextView
        android:layout_alignParentLeft="true"
        android:id="@+id/tvOrderId"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginHorizontal="5dp"
        android:layout_marginVertical="2dp"
        android:gravity="center|start"
        android:textColor="@color/black"
        android:textSize="16sp"
        android:textStyle="bold"
        android:text="1100"/>
    <View
        android:id="@+id/viewLineTop"
        android:layout_below="@+id/tvOrderId"
        android:layout_centerInParent="true"
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:layout_marginVertical="5dp"
        android:layout_marginHorizontal="10dp"
        android:background="@color/black" />
    <androidx.recyclerview.widget.RecyclerView
        android:id="@+id/rvProductItems"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:visibility="visible"
        tools:listitem="@layout/item_order_list"
        tools:itemCount="3"
        android:layout_below="@+id/viewLineTop"/>
    <TextView
        android:layout_below="@+id/rvProductItems"
        android:layout_alignParentRight="true"
        android:id="@+id/tvOrderTotal"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginHorizontal="5dp"
        android:layout_marginVertical="2dp"
        android:gravity="center|start"
        android:textColor="@color/black"
        android:textSize="16sp"
        android:textStyle="bold"
        android:text="1100"/>

</RelativeLayout>