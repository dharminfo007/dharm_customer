<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/llContactUs"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_gravity="center"
    android:layout_marginVertical="10dp"
    android:orientation="horizontal">

    <TextView
        android:id="@+id/tvName"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginHorizontal="5dp"
        android:gravity="start|center"
        android:lines="2"
        android:layout_toLeftOf="@+id/llOrderFields"
        android:layout_alignParentLeft="true"
        android:maxLines="2"
        android:layout_below="@+id/viewLineTop"
        android:layout_gravity="center"
        android:textColor="@color/black"
        android:textSize="14sp"
        android:textStyle="normal"
        tools:text="product name"/>
    <LinearLayout
        android:id="@+id/llOrderFields"
        android:layout_below="@+id/viewLineTop"
        android:layout_centerInParent="true"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <TextView
            android:layout_centerInParent="true"
            android:id="@+id/tvQty"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="@color/black"
            android:textSize="13sp"
            android:textStyle="normal"
            tools:text="20 cartoons" />

        <View
            android:id="@+id/viewsepretor"
            android:layout_toRightOf="@+id/tvQty"
            android:layout_centerInParent="true"
            android:layout_width="1dp"
            android:layout_height="15dp"
            android:layout_marginHorizontal="10dp"
            android:background="@color/black" />

        <TextView
            android:layout_toRightOf="@+id/viewsepretor"
            android:layout_centerInParent="true"
            android:id="@+id/tvUnit"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="@color/black"
            android:textSize="13sp"
            android:textStyle="normal"
            tools:text="20 in stocks" />

    </LinearLayout>
    <TextView
        android:id="@+id/tvPrice"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginHorizontal="5dp"
        android:gravity="center"
        android:textColor="@color/black"
        android:textSize="14sp"
        android:textStyle="normal"
        tools:text="120"
        android:layout_below="@+id/viewLineTop"
        android:layout_alignParentRight="true"
        android:layout_centerInParent="true"/>


</RelativeLayout>